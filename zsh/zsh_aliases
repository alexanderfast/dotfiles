alias v="nvim"

# git
alias gcma='git commit -am'
alias gamend='git commit --amend --verbose'
alias glr='git pull --rebase'
alias gfpgl='git fetch --prune; git pull'

# docker
alias dr='docker run --rm -it'

# override default rm
alias rm='rm'

# distrobox
alias dba='distrobox assemble'
alias dbac='distrobox assemble create'
alias dbar='distrobox assemble rm'
alias dbc='distrobox create'
alias dbe='distrobox enter'
alias dbl='distrobox list'
alias dbr='distrobox rm'
alias dbs='distrobox stop'
