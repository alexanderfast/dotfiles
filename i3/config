bar {
    height 25
    position bottom
    font pango:Hack Nerd Font 11
    status_command i3status --config ~/.dotfiles/i3/i3status.conf
    tray_padding 20
    #output DP-4
    output eDP-1
    tray_output DP-4

    colors {
        separator  $foreground
        background $background
        statusline $inactive_fg

        #                  border           bg              text
        focused_workspace  $focused_bg      $focused_bg     $focused_fg
        active_workspace   $background      $active_bg      $active_fg
        inactive_workspace $background      $inactive_bg    $inactive_fg
        urgent_workspace   $background      $bell_bg        $active_fg
        binding_mode       $background      $bell_bg
    }
}

